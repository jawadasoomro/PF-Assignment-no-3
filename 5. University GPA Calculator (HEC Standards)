#include <stdio.h>

float calculateGPA(int marks) {
    if (marks >= 85) return 4.0;
    if (marks >= 80) return 3.7;
    if (marks >= 75) return 3.3;
    if (marks >= 70) return 3.0;
    if (marks >= 65) return 2.7;
    if (marks >= 60) return 2.3;
    return 0.0;
}

int main() {
    int marks;
    printf("Enter marks: ");
    scanf("%d", &marks);
    printf("GPA = %.1f\n", calculateGPA(marks));
    return 0;
}
